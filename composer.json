{
  "name": "novius/laravel-nova-translation",
  "description": "A Nova tool to manage application's translations.",
  "keywords": [
    "laravel",
    "nova",
    "language",
    "translation",
    "i18n"
  ],
  "license": "AGPL-3.0-or-later",
  "require": {
    "php": ">=7.2.0",
    "novius/laravel-translation-loader": "^1.0.0"
  },
  "require-dev": {
    "friendsofphp/php-cs-fixer": "~2.15.0"
  },
  "autoload": {
    "psr-4": {
      "Novius\\LaravelNovaTranslation\\": "src/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "Novius\\LaravelNovaTranslation\\LaravelNovaTranslationServiceProvider"
      ]
    }
  },
  "scripts": {
    "lint": [
      "php-cs-fixer fix --config .php_cs -vv --diff --allow-risky=yes --dry-run"
    ]
  },
  "config": {
    "sort-packages": true
  },
  "minimum-stability": "dev",
  "prefer-stable": true
}
